@model NetMvc.Cms.Portal.Models.OrderViewModel

@{
    ViewBag.Title = "AddressAndPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />


<section id="cart_items">
    <div class="container">

        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Sản phẩm</td>
                        <td class="description"></td>
                        <td class="price">Đơn giá</td>
                        <td class="quantity">Số lượng</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.CartItems)
                    {
                        <tr id="row-@item.CartItemId">
                            <td>
                                <img src="@item.ProductImage" alt="No photo" width="40" height="45" />
                            </td>
                            <td>
                                @Html.ActionLink(item.ProductName, "Detail", "Product", new { id = item.ProductId }, null)
                            </td>

                            <td>
                                @item.Price
                            </td>
                            <td>
                                @*@item.Count*@
                                <input type="text" id="item-count-@item.CartItemId" value="@item.Count">
                            </td>

                        </tr>
                    }

                    <tr>
                        <td class="cart_description">
                            <h4>
                                <p></p><br />
                                <p>Tổng giá giỏ hàng: </p>
                            </h4>
                        </td>
                        <td class="cart_price">
                            <p></p><br />
                            <p id="cart-total">@Model.CartTotal</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>



        <div class="clearfix">
            <br />
            <br />
        </div>

        <div class="row">
            <div class="col-sm-8">
                <div class="contact-form">
                    <h2 class="title text-center">Đặt hàng</h2>
                    <div class="status alert alert-success" style="display: none"></div>
                    <form id="main-contact-form" class="contact-form row" name="contact-form" action="/Checkout/AddressAndPayment" method="post">
                        <div class="form-group col-md-6">
                            <input type="text" name="CustomerName" class="form-control" required="required" placeholder="Tên">
                        </div>

                        <div class="form-group col-md-6">
                            <input type="email" name="CustomerEmail" class="form-control" required="required" placeholder="Email">
                        </div>

                        <div class="form-group col-md-6">
                            <input type="text" name="CustomerAddress" class="form-control" required="required" placeholder="Địa chỉ nhận hàng">
                        </div>

                        <div class="form-group col-md-6">
                            <input type="text" name="CustomerMobile" class="form-control" required="required" placeholder="Điện thoại">
                        </div>

                        <div class="form-group col-md-6">
                            <input type="text" name="PaymentMethod" value="Thanh toán khi nhận hàng" disabled="disabled" class="form-control" placeholder="Thanh toán khi nhận hàng">
                        </div>

                        <div class="form-group col-md-6">
                            <textarea name="CustomerMessage" id="message" required="required" class="form-control" rows="8" placeholder="Thông tin bổ sung"></textarea>
                        </div>

                        <div class="form-group col-md-12">
                            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Đặt hàng">
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="contact-info">
                </div>
            </div>
        </div>



    </div>



    
</section> <!--/#cart_items-->

