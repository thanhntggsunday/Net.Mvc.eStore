@using NetMvc.Cms.Common.Dto
@model NetMvc.Cms.Common.ViewModel.Common.ListViewModel<NetMvc.Cms.Common.Dto.AlbumDto>

@{
    
    Layout = null;
}

<div class="sidebar-danhmuc-sp">
    <div class="widget-sidebar">
        <h3 class="tile-sidebar-cate">Danh mục</h3>
        <ul id="danhmucsanpham" class="menu">
            @foreach (var item in Model.Data)
            {
                <li class="menu-item"><a href="/album/@item.MetaTitle-@item.ID">@item.Title</a></li>
            }
        </ul>
    </div>
    <div class="widget-sidebar">
        <h3 class="tile-sidebar-cate">Sản phẩm nổi bật</h3>
        <ul id="widget-sidebar-1">
            @foreach (var item in (IEnumerable<ProductDto>)ViewBag.HotProducts)
            {
                string link = "/product-detail/" + @item.MetaTitle + @item.ID;
                <li>
                    <div class="thumb-sidebar">
                        <a href="@link">
                            <img width="160" height="216" src="@item.Images" class="attachment-thumbnail wp-post-image" alt="@item.Title" />
                        </a>
                    </div>
                    <div class="meta-sidebar">
                        <h2><a href="@link">@item.Title</a></h2>
                        <div class="clear"></div>
                        <p class="price-sidebar">Giá: <strong>@item.Price?.ToString("N0") VNĐ</strong></p>
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="clear"></div>
    <div id="video-pro-cate" class="widget-sidebar">
        <p><iframe src="//www.youtube.com/embed/BKaDy3BSDIk" height="350" width="425" frameborder="0"></iframe></p>
    </div>
</div>

<style>
    /*Product category*/
    .widget-sidebar {
        float: left;
        width: 100%;
        margin-bottom: 20px;
    }

    .tile-sidebar-cate {
        font-size: 17px;
        color: #a8a8a8;
        text-transform: uppercase;
        float: left;
        width: 100%;
        padding: 10px 0;
        font-family: 'Noticia Text', serif;
        font-weight: normal;
        border-top: 1px solid #303030;
        border-bottom: 1px solid #303030;
    }

    #widget-sidebar-1 li {
        float: left;
        width: 100%;
        margin: 10px 0;
    }

    .thumb-sidebar {
        float: left;
        width: 62px;
        margin-right: 15px;
    }

        .thumb-sidebar img {
            width: 62px;
            height: auto;
            float: left;
        }

        .thumb-sidebar > a {
            display: block;
            float: left;
        }

    .meta-sidebar {
        float: left;
        width: 137px;
    }

    .title-sidebar {
        font-size: 17px;
        color: #b9b9b9;
        width: 100%;
        float: left;
        text-align: center;
        font-family: 'Noticia Text', serif;
        text-transform: uppercase;
        margin-bottom: 10px;
    }

    .meta-sidebar a {
        color: #a8a8a8;
        font-size: 12px;
        font-family: Verdana;
        text-transform: uppercase;
        font-weight: normal;
    }

    .meta-sidebar h2 {
        font-weight: normal;
    }

    .meta-sidebar a:hover {
        color: #FFF;
        transition: 0.3s all ease-in-out;
    }

    .price-sidebar {
        float: left;
        width: 100%;
        color: #a8a8a8;
        font-family: Verdana;
        font-size: 11px;
        margin-top: 7px;
        text-transform: uppercase;
    }
</style>