@model NetMvc.Cms.Portal.Models.OrderDetailViewModel
@{
    Layout = "~/Views/Shared/_OrderLayout.cshtml";
    ViewBag.Title = "Các đơn hàng đã đặt";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Chi tiết đơn hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
    
    <div class="col-md-12">
        <p>Mã đơn hàng: @Model.OrderItem.ID</p>
        <br/>
        <p>Trạng thái đơn hàng: @Model.OrderItem.PaymentStatus</p>
        <br/>
        <p>Phương thức thanh thoán: @Model.OrderItem.PaymentMethod</p>
        <br/>
        <p>Ngày đặt: @Model.OrderItem.CreatedDate</p>
        <br/>
        <p>Tổng tiền: @Model.OrderItem.Total VNĐ</p>
        <br/>
    </div>

</div>



<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi tiết
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                            <tr>
                                <th>Tên Sản phẩm</th>
                                <th>Số lượng</th>
                              
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetailDTOs)
                            {
                                string link = "/product-detail/" + " - " + item.ProductID;

                                <tr class="even gradeA" >
                                    <td><a href="@link">@item.ProductName</a></td>
                                    <td>@item.Quantitty</td>
                                  
                                    <td class="center">
                                      
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->