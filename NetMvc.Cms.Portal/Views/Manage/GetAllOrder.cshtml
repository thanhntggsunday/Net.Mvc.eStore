@model NetMvc.Cms.Common.ViewModel.Common.ListViewModel<NetMvc.Cms.Common.Dto.OrderDto>
@{
    Layout = "~/Views/Shared/_OrderLayout.cshtml";
    ViewBag.Title = "Các đơn hàng đã đặt";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Các đơn hàng đã đặt</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>



<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th>Email người đặt</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái</th>
                                <th>Phương thức thanh toán</th>
                                <th>Tổng giá</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                                <tr class="even gradeA" id="item_@item.ID">
                                    <td>@Html.DisplayFor(model => item.ID)</td>
                                    <td>@Html.DisplayFor(model => item.CustomerEmail)</td>
                                    <td>@Html.DisplayFor(model => item.CreatedDate)</td>
                                    <td>@Html.DisplayFor(model => item.PaymentStatus)</td>
                                    <td>@Html.DisplayFor(model => item.PaymentMethod)</td>
                                    <td>@Html.DisplayFor(model => item.Total)</td>

                                    <td class="center">
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-primary" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->