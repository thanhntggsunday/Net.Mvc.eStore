@model NetMvc.Cms.Portal.Models.NewsDetailViewModel
@{
    ViewBag.Title = @Model.NewsDetail.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @{Html.RenderAction("NewsCates", "News");}
            </div>

            <div class="col-sm-9 padding-right">
                <div class="blog-post-area">
                    <h2 class="title text-center">@Model.NewsDetail.Title</h2>
                    <div class="single-blog-post">
                        <h3>@Model.NewsDetail.MetaDescription</h3>
                        <div class="post-meta">
                            <ul>
                                <li><i class="fa fa-user"></i> @Model.NewsDetail.ModifiedBy</li>
                                <li><i class="fa fa-clock-o"></i> @Model.NewsDetail.ModifiedDate</li>
                            </ul>
                            <span>
                               
                            </span>
                        </div>
                        <a href="#">
                            <img src="@Model.NewsDetail.Images" alt="" width="400" height="500">
                        </a>
                        <p>
                           
                            @Html.Raw(Model.NewsDetail.ContentHtml)
                        </p>
                        <div class="pager-area">
                            <ul class="pager pull-right">
                               
                            </ul>
                        </div>
                    </div>
                </div><!--/blog-post-area-->
            </div>
        </div>
    </div>
</section>