@model NetMvc.Cms.Common.ViewModel.Common.ListViewModel<NetMvc.Cms.Common.Dto.OrderDto>
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Quản lý đơn hàng";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">QUẢN LÝ ĐƠN HÀNG</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>



<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH ĐƠN HÀNG
            </div>

            @if (TempData["Notification"] != null)
            {
                @Html.Hidden("NotificationAutoHide", TempData["NotificationAutoHide"])
                <div id="NotificationBox" class="@TempData["NotificationCSS"]" style="display: none">
                    @TempData["Notification"]
                </div>
            }

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="tbl_Orders">
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section scripts
{
    <script src="~/Scripts/admin/order/order.js"></script>
}
