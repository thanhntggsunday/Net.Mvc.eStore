@model IEnumerable<NetMvc.Cms.Portal.Areas.Admin.Models.ClientMenuViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Resources.CmsResource.AdminMenuListTitlePage</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink(@Resources.CmsResource.AdminFunctionCreateButtonText, "Create", null, new { @class = "btn btn-success" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @if (TempData["Notification"] != null)
                {
                    @Html.Hidden("NotificationAutoHide", TempData["NotificationAutoHide"])
                    <div id="NotificationBox" class="@TempData["NotificationCSS"]" style="display: none">
                        @TempData["Notification"]
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ID)</th>
                                <th>@Html.DisplayNameFor(model => model.Text)</th>
                                <th>@Html.DisplayNameFor(model => model.Order)</th>
                                <th>@Html.DisplayNameFor(model => model.IsLocked)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                <th>@Resources.CmsResource.AdminFunctionActionColumnHeaderText</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="even gradeA" id="item_@item.ID">
                                    <td>@Html.DisplayFor(model => item.ID)</td>
                                    <td>@Html.DisplayFor(model => item.Text)</td>
                                    <td>@Html.DisplayFor(model => item.Order)</td>
                                    <td class="center">@Html.DisplayFor(model => item.IsLocked)</td>
                                    <td class="center">@Html.DisplayFor(model => item.CreatedDate)</td>
                                    <td class="center">
                                        @Html.ActionLink(@Resources.CmsResource.AdminFunctionEditButtonText, "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                                        @Ajax.ActionLink(@Resources.CmsResource.AdminFunctionDeleteButtonText, "Delete", new { id = item.ID },
                                        new AjaxOptions()
                                        {
                                            HttpMethod = "Delete",
                                            Confirm = @Resources.CmsResource.AdminConfirmDeleteMsg,
                                            UpdateTargetId = @item.ID,
                                            OnSuccess = "$('#item_" + @item.ID + "').remove();"
                                        }, new { @class = "btn btn-danger linkDelete" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
