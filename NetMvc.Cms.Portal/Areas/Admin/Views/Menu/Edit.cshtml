@model  NetMvc.Cms.Common.ViewModel.Common.ApiResult<NetMvc.Cms.Common.Dto.MenuDto>

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Resources.CmsResource.AdminMenuEditTitlePage</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.CmsResource.AdminNoteForm
            </div>
            <div class="panel-body">
                @if (TempData["Notification"] != null)
                {
                    @Html.Hidden("NotificationAutoHide", TempData["NotificationAutoHide"])
                    <div id="NotificationBox" class="@TempData["NotificationCSS"]" style="display: none">
                        @TempData["Notification"]
                    </div>
                }
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "Menu", FormMethod.Post, new { @role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ResultObj.ID)
                            @Html.HiddenFor(model=>model.ResultObj.CreatedBy)
                            @Html.HiddenFor(model=>model.ResultObj.CreatedDate)
                            <div class="form-group">
                                <label> @Html.LabelFor(model => model.ResultObj.ID)</label>
                                @Html.TextBoxFor(model => model.ResultObj.ID, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ResultObj.ID, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label> @Html.LabelFor(model => model.ResultObj.Name)</label>
                                @Html.TextBoxFor(model => model.ResultObj.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ResultObj.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.ResultObj.Description)
                                </label>
                                @Html.TextBoxFor(model => model.ResultObj.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ResultObj.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.ResultObj.Text)
                                </label>
                                @Html.TextBoxFor(model => model.ResultObj.Text, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ResultObj.Text, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.ResultObj.Link)
                                </label>
                                @Html.TextBoxFor(model => model.ResultObj.Link, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ResultObj.Link, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.ResultObj.Target)
                                </label>
                                @Html.DropDownListFor(model => model.ResultObj.Target,
                                     new List<SelectListItem>()
                                        {
                                        new SelectListItem { Text = @Resources.CmsResource.AdminOpenSameWindowText, Value = "_self" },
                                        new SelectListItem { Text = @Resources.CmsResource.AdminOpenNewWindowText,  Value = "_blank" },
                                        }, new { @class = "form-control" })
                                @Html.ValidationMessage("Target", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.ResultObj.Order)
                                </label>
                                @Html.TextBoxFor(model => model.ResultObj.Order, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ResultObj.Order, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.ResultObj.CssClass)
                                </label>
                                @Html.TextBoxFor(model => model.ResultObj.CssClass, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ResultObj.CssClass, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.ResultObj.GroupID)</label>
                                @Html.DropDownListFor(model => model.ResultObj.GroupID, (SelectList)ViewBag.Groups, @Resources.CmsResource.AdminEmptyGroupSelectionText, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.ResultObj.ParentID)</label>
                                @Html.DropDownListFor(model => model.ResultObj.ParentID, (SelectList)ViewBag.Parents, @Resources.CmsResource.AdminEmptySelectionTextForFunction, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.ResultObj.IsLocked)
                                </label>
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.ResultObj.IsLocked, new { @checked = "checked" })
                                    @Html.ValidationMessageFor(model => model.ResultObj.IsLocked, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <button type="submit" class="btn btn-default">@Resources.CmsResource.AdminSaveButtonText</button>

                            @Html.ActionLink(@Resources.CmsResource.GoBackToListText, "Index");
                        }
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
