@model NetMvc.Cms.Common.ViewModel.Common.ListViewModel<NetMvc.Cms.Common.Dto.AppUserDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Resources.CmsResource.AdminUserListTitlePage</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @if (TempData["Notification"] != null)
                {
                    @Html.Hidden("NotificationAutoHide", TempData["NotificationAutoHide"])
                    <div id="NotificationBox" class="@TempData["NotificationCSS"]" style="display: none">
                        @TempData["Notification"]
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <tr>
                            <th>
                                Tên
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Họ và tên
                            </th>
                          
                            <th>
                                Số điện thoại
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.Data)
                        {
                            <tr id="item_@item.Id">
                                <td>
                                    @Html.DisplayFor(model => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.FullName)
                                </td>
                               
                                <td>
                                    @Html.DisplayFor(model => item.PhoneNumber)
                                </td>

                                <td>
                                   
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
