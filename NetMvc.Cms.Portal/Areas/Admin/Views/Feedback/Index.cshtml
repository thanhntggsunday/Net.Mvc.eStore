@using System.Globalization
@model NetMvc.Cms.Common.ViewModel.Common.ListViewModel<NetMvc.Cms.Common.Dto.FeedbackDto>

@{
    ViewBag.Title = @Resources.CmsResource.AdminFeedbackListTitlePage;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Resources.CmsResource.AdminFeedbackListTitlePage</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               @Resources.CmsResource.AdminNoteFormEmpty
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <span id="actionMessage"></span>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Tiêu</th>
                                <th>Số ĐT</th>
                                <th>Email</th>
                                <th>Ngày tạo</th>
                                <th>@Resources.CmsResource.AdminFunctionActionColumnHeaderText</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                                <tr class="even gradeA" id="item_@item.ID">
                                    <td>@Html.DisplayFor(model => item.ID)</td>
                                    <td>@Html.DisplayFor(model => item.Name)</td>
                                    <td>@Html.DisplayFor(model => item.Title)</td>
                                    <td class="center">@Html.DisplayFor(model => item.Phone)</td>
                                    <td class="center">@Html.DisplayFor(model => item.Email)</td>
                                    <td class="center">@Html.DisplayFor(model => item.StrCreatedDate)</td>
                                    <td class="center">
                                        @Html.ActionLink(@Resources.CmsResource.AdminFunctionViewButtonText, "Details", new { id = item.ID }, new { @class = "btn btn-primary" })
                                        @Ajax.ActionLink(@Resources.CmsResource.AdminFunctionDeleteButtonText, "Delete", new { id = item.ID },
                                        new AjaxOptions()
                                        {
                                            HttpMethod = "Delete",
                                            Confirm = @Resources.CmsResource.AdminConfirmDeleteMsg,
                                            OnSuccess = "$('#item_" + @item.ID + "').remove();"
                                        }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
